@inject ASP08_DLL.CountryCodes Codes
@model NewCelebrityModel
@{
    ViewData["Title"] = "Добавить знаменитость";
}

<form asp-action="ProcessNewCelebrity" method="post" enctype="multipart/form-data" id="celebrityForm">
    @Html.AntiForgeryToken()
        <div class="form-group mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Nationality" class="form-label"></label>
            <select asp-for="Nationality" asp-items="Model.CountryList" class="form-control">
                <option value="">-- Выберите страну --</option>
            </select>
            <span asp-validation-for="Nationality" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Photo" class="form-label"></label>
            <input type="file" asp-for="Photo" class="form-control" accept=".jpg,.jpeg,.png" onchange="validateFileExtension(this)" />
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Далее</button>
</form>